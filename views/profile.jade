doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Профиль
    link(rel='stylesheet', href='/css/bootstrap.css')
    script(src='/js/jquery-1.12.0.js')
    script(src='/js/coupon.js')
    script(src='/js/profile.js')
  body
    div
      h3.page-header2.text-center.container
        table(style='margin: auto')
          tr
            td(style='width: 300px')
              a.navbar-link(href='/account') Купоны
            td(style='width: 300px')
              a.navbar-link(href='/stat') Статистика
            td(style='width: 300px')
              a.navbar-link(href='/profile') Профиль
            td(style='width: 300px')
              a.navbar-link(href='/logout') Выход
    .container-fluid
        h3.page-header2.col-md-5.col-xs-5 Информация о пользователе
        #userInfo
          .col-md-8.col-xs-8
            .row(style='margin: 10px 0')
              .col-md-5.col-xs-5 Регистрационный код:
              .col-md-7.col-xs-7 #{regCode}
            .row(style='margin: 10px 0')
              .col-md-5.col-xs-5 Название организации:
              .col-md-7.col-xs-7 #{orgName}
            .row(style='margin: 10px 0')
              .col-md-5.col-xs-5 Город:
              .col-md-7.col-xs-7 #{orgCity}
            form(action='/uploadAvatar', method='post' encType='multipart/form-data')
              .row(style='margin: 10px 0')
                .col-md-5.col-xs-5
                  button.btn.btn-primary.btn-upload(type='submit') Загрузить изображение профиля
                .col-md-7.col-xs-7
                  .input-group
                    span.input-group-btn
                      span.btn.btn-primary.btn-file
                        | Browse 
                        input(type='file', name='img')
                    input.form-control(type='text', name='avatar', readonly='')
          .col-md-4.col-xs-4
            img.img-responsive(src=imgUrl)
    .panel-footer.text-center(style='margin-top: 10px')
